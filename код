CREATE TABLE hamsters
(
		id int AUTO_INCREMENT PRIMARY KEY,
		name varchar(30),
		birthday date,
		commands varchar(200),
		type_id int,
		FOREIGN KEY (type_id) REFERENCES home_animals (id) ON DELETE CASCADE ON UPDATE CASCADE
);
